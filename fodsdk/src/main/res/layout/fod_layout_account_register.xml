<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.FodLoginDialog">

    <EditText
        android:id="@+id/et_register_account"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/fod_shape_radius_16_stroke_1"
        android:hint="@string/fod_account"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/fod_color_acacac"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/fod_shape_radius_16_stroke_1"
        android:gravity="center">

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/fod_password"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/fod_color_acacac"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cb_register_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="8dp"
            android:button="@drawable/fod_selector_eye" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/fod_shape_radius_16_stroke_1"
        android:gravity="center">

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/fod_confirm_password"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/fod_color_acacac"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cb_confirm_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="8dp"
            android:button="@drawable/fod_selector_eye" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_register_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="6dp"
        android:button="@drawable/fod_selector_radio"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="我已同意《用户协议》和《隐私政策》"
        android:textColor="@android:color/black"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn_account_register"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/fod_shape_radius_16"
        android:text="@string/fod_register"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/fod_account_login"
        android:textColor="@color/fod_color_acacac"
        android:textSize="12dp" />
</LinearLayout>